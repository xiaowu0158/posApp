<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="20dip"
        android:paddingTop="20dip"
        android:layout_gravity="center"
        android:background="@drawable/login_user_table_bg">
        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="match_parent"
            android:id="@+id/scanLinearLayout"
            android:orientation="vertical"
            android:background="@drawable/textview_border">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#4fa5d5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/edit_graybg">
                <View
                    android:layout_width="1.5dip"
                    android:layout_height="match_parent"
                    android:background="#4fa5d5"/>
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:text="商品名称"
                    />
                <View
                    android:layout_width="1.5dip"
                    android:layout_height="match_parent"
                    android:background="#B4B3B3"/>
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:text="品牌" />
                <View
                    android:layout_width="1.5dip"
                    android:layout_height="match_parent"
                    android:background="#B4B3B3"/>
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:text="分类" />
                <View
                    android:layout_width="1.5dip"
                    android:layout_height="match_parent"
                    android:background="#B4B3B3"/>
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:text="规格" />
                <View
                    android:layout_width="1.5dip"
                    android:layout_height="match_parent"
                    android:background="#B4B3B3"/>
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:text="挂牌价" />
                <View
                    android:layout_width="1.5dip"
                    android:layout_height="match_parent"
                    android:background="#B4B3B3"/>
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:text="库存" />
                <View
                    android:layout_width="1.5dip"
                    android:layout_height="match_parent"
                    android:background="#4fa5d5"/>
            </LinearLayout>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/warehStkListView"
                android:background="@drawable/textview_border">

            </ListView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/scanLinearLayout"
            android:id="@+id/inputLinearLayout"
            android:layout_marginLeft="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:paddingBottom="5dp"
                android:orientation="horizontal"
                android:background="@drawable/widget_head_bg">
                <Button
                    android:id="@+id/scan_btn"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_gravity="left|center"
                    android:background="@drawable/btn_scan_bg_sel"/>
                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:orientation="horizontal"
                    android:background="@drawable/widget_head_bg">
                    <EditText
                        android:id="@+id/prod_search_editer"
                        android:layout_width="500dp"
                        android:layout_height="60dip"
                        android:layout_gravity="left|center"
                        android:layout_marginRight="60dip"
                        android:focusable="true"
                        android:focusableInTouchMode="true"

                        android:imeOptions="actionSearch"
                        android:background="@drawable/edit_search_bg"
                        android:hint="输入搜索内容"/>
                    <Button
                        android:id="@+id/search_btn"
                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:layout_gravity="right|center"
                        android:background="@drawable/btn_search_bg"/>

                </FrameLayout>
            </LinearLayout>
            <android.inputmethodservice.KeyboardView
                android:id="@+id/stkInputKeyboardView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/bg_gray"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:keyBackground="@drawable/button_key_select"
                android:keyTextColor="@color/text_black"
                android:keyTextSize="27.0sp"
                android:shadowColor="@color/white"
                android:shadowRadius="0.0"
                android:visibility="visible"
                android:keyPreviewLayout="@null"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:id="@+id/waiterBar"
            android:background="@drawable/widget_head_bg"
            >
            <ProgressBar
                android:layout_gravity="left|center"
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请稍等..." />

        </FrameLayout>
    </RelativeLayout>

</LinearLayout>
