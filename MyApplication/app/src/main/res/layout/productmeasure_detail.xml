
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#ffffffff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.wuhongjie.myapplication.ProductMeasureDetailFragment"
    >

<ScrollView
    android:id="@+id/productmeasure_detail_scrollView"
    android:scrollbars="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5.0dip"
    android:layout_marginBottom="10.0dip"
    android:layout_weight="1.0"
    android:transcriptMode="alwaysScroll"
    android:stackFromBottom="true"
    >
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <!-- 开始内容 -->
        <LinearLayout android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:visibility="gone">
            <TextView
                android:id="@+id/productmeasure_detail"
                android:textSize="20.0sp"
                android:textColor="#ff5cacee"
                android:padding="3.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="上衣信息" />
        </LinearLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ff5cacee"
            />
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_border">
            <TextView
            android:id="@+id/measure_detailProdClsCodeTextView"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="16.0sp"
            android:paddingRight="6.0dip"
            android:layout_width="0.0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1.0dip"
            android:maxLines="2"
            android:layout_weight="1.0"
            android:text="货号代码"
            android:textColor="#ff000000"
            android:background="@xml/shape4"
            />
            <TextView
                android:id="@+id/measure_detailProdCatNameTextView"
                android:textAppearance="?android:textAppearanceMedium"
                android:textSize="16.0sp"
                android:paddingRight="6.0dip"
                android:layout_width="0.0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1.0dip"
                android:maxLines="2"
                android:layout_weight="1.0"
                android:text="大类"
                android:textColor="#ff000000"
                android:background="@xml/shape4"
                />
            <TextView
                android:id="@+id/measure_detailProdClsNameTextView"
                android:textAppearance="?android:textAppearanceMedium"
                android:textSize="16.0sp"
                android:paddingRight="6.0dip"
                android:layout_width="0.0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1.0dip"
                android:maxLines="2"
                android:layout_weight="1.0"
                android:text="货号名称"
                android:textColor="#ff000000"
                android:background="@xml/shape4"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/measure_detailProdClsNameLine1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_border">

            <TextView
                android:textAppearance="?android:textAppearanceMedium"
                android:textSize="16.0sp"
                android:paddingRight="6.0dip"
                android:layout_width="0.0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1.0dip"
                android:maxLines="2"
                android:layout_weight="1.0"
                android:text="货号名称"
                android:textColor="#ff000000"

                android:id="@+id/measure_detailProdClsNameTextView1"

                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <TextView
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textSize="16.0sp"
                    android:paddingRight="6.0dip"
                    android:layout_width="0.0px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1.0dip"
                    android:maxLines="2"
                    android:layout_weight="1.0"
                    android:text="数量："
                    android:textColor="#ff000000"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_reduce"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/text_angle_gray"
                        android:gravity="center"
                        android:text="一"
                        android:textColor="@color/grey_color1"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/text_angle"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="1"
                        android:textColor="@color/grey_color1"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_add"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/text_angle_right"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/grey_color1"
                        android:textSize="16sp" />
                    <TextView
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textSize="16.0sp"
                        android:paddingRight="1.0dip"
                        android:layout_width="0.0px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1.0dip"
                        android:maxLines="2"
                        android:layout_weight="1.0"
                        android:text=""
                        android:textColor="#ff000000"
                        android:id="@+id/tv_uom"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/measure_detailTeamMemo"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_border">

            <TextView
                android:textAppearance="?android:textAppearanceMedium"
                android:textSize="16.0sp"
                android:paddingRight="6.0dip"
                android:layout_width="0.0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1.0dip"

                android:layout_weight="1.0"
                android:text="术语信息"
                android:textColor="@color/colorPrimary"
                android:id="@+id/measure_detailTeamMemoTextView"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_border"
            android:id="@+id/selectSpecGrpRelative"
            android:clickable="true"
            >


                <TextView
                    android:id="@+id/selectSpecGrpTextView"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textSize="16.0sp"
                    android:paddingRight="6.0dip"
                    android:layout_width="0.0px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1.0dip"
                    android:maxLines="2"
                    android:layout_weight="1.0"
                    android:textColor="#ff000000"
                    android:text="选择款式甄别" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="matrix"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/mm_submenu" />

        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_border"
            android:id="@+id/selectSpecLinearLayout"
            android:clickable="true"
            >


            <TextView
                android:id="@+id/selectSpecTextView"
                android:textAppearance="?android:textAppearanceMedium"
                android:textSize="16.0sp"
                android:paddingRight="6.0dip"
                android:layout_width="0.0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1.0dip"
                android:maxLines="2"
                android:layout_weight="1.0"
                android:textColor="#ff000000"
                android:text="选择款式规格"

                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="matrix"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/mm_submenu" />

        </LinearLayout>




        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
           android:layout_marginTop="10.0dip">
            <include layout="@layout/listview_foot"/>
            <ListView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:cacheColorHint="#FFF4F4F4"
                android:dividerHeight="0.0dip"
                android:fadingEdge="none"
                android:id="@+id/teamListView">

            </ListView>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <android.inputmethodservice.KeyboardView
                android:id="@+id/keyboard_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@color/listitem_black"
                android:keyBackground="@drawable/btn_keyboard_key"
                android:keyTextColor="@color/frame_button_text_select"
                android:visibility="gone" />
        </RelativeLayout>
        <!-- 结束内容 -->
    </LinearLayout>
</ScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5.0dip">
        <Button
            android:textSize="18.0sp"
            android:textColor="#fffffffe"
            android:gravity="center"
            android:id="@+id/ltSaveButton"
            android:background="@drawable/ft_dialog_red_btn_selector"
            android:layout_width="wrap_content"
            android:layout_height="42.0dip"
            android:text="保存"
            android:layout_weight="1.0" />
        <Button
            android:textSize="18.0sp"
            android:textColor="#fffffffe"
            android:gravity="center"
            android:id="@+id/ltBackButton"
            android:background="@drawable/ft_dialog_red_btn_selector"
            android:layout_width="wrap_content"
            android:layout_height="42.0dip"
            android:layout_marginLeft="3.0dip"
            android:text="返回"
            android:layout_weight="1.0" />
    </LinearLayout>

</LinearLayout>