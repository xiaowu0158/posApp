<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_border">
    <View
        android:layout_width="1.5dip"
        android:layout_height="match_parent"
        android:background="#4fa5d5"/>
    <CheckedTextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:paddingBottom="5dip"
        android:paddingTop="5dip"
        android:textColor="#000000"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:text=""
        android:id="@+id/tppActiveTextView"/>
    <View
        android:layout_width="1.5dip"
        android:layout_height="match_parent"
        android:background="#B4B3B3"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:textColor="#000000"
            android:textSize="15sp"
            android:gravity="center"
            android:text="策略名称"
            android:id="@+id/tppNameTextView"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:textColor="#000000"
            android:textSize="12sp"
            android:gravity="left"
            android:text="策略描述"
            android:id="@+id/tppDescTextView"/>
    </LinearLayout>



    <View
        android:layout_width="1.5dip"
        android:layout_height="match_parent"
        android:background="#B4B3B3"/>
    <TextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="5dip"
        android:paddingTop="5dip"
        android:textColor="#000000"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="顾客范围"
        android:id="@+id/custScpTextView"/>
    <View
        android:layout_width="1.5dip"
        android:layout_height="match_parent"
        android:background="#B4B3B3"/>
    <TextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="5dip"
        android:paddingTop="5dip"
        android:textColor="#000000"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="开始时间"
        android:id="@+id/fromDatetextView"/>
    <View
        android:layout_width="1.5dip"
        android:layout_height="match_parent"
        android:background="#B4B3B3"/>
    <TextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="5dip"
        android:paddingTop="5dip"
        android:textColor="#000000"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="结束时间"
        android:id="@+id/toDateTextView"/>
    <View
        android:layout_width="1.5dip"
        android:layout_height="match_parent"
        android:background="#4fa5d5"/>

</LinearLayout>
