<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_border"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ordLinearLayout">
                <TextView
                    android:textSize="16.0sp"
                    android:textColor="#ff000000"
                    android:id="@+id/ordNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.0dip"
                    android:text="订单号："
                    android:background="@xml/shape4"
                    />
                <TextView
                    android:textSize="14.0sp"
                    android:textColor="#646464"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.0dip"
                    android:text="   "
                    />
                <TextView
                    android:textSize="14.0sp"
                    android:textColor="#646464"
                    android:id="@+id/prodCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.0dip"
                    android:layout_weight="1"
                    android:text="货号："

                    />
                <TextView
                    android:textSize="14.0sp"
                    android:textColor="#646464"
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.0dip"
                    android:layout_marginRight="25dip"
                    android:text="性别"
                 />

                <TextView
                    android:textSize="16.0sp"
                    android:textColor="#fa0606"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.0dip"
                    android:layout_marginRight="18dip"
                    android:id="@+id/prodCat"
                    android:text="大类："

                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5.0dip"
                android:id="@+id/prodMemoLinearLayout">
                <TextView
                    android:textSize="14.0sp"
                    android:textColor="#9c9b9b"
                    android:id="@+id/prodMemo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.0dip"
                    android:layout_marginLeft="3.0dip"

                    android:text="款式描述："
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/measure_detailProdClsNameLine1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="1dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_border">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:paddingRight="1dip"
                    android:background="@xml/shape4_red">
                    <TextView
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textSize="@dimen/prodname_size"
                        android:paddingRight="@dimen/padding_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1.0dip"
                        android:maxLines="2"
                        android:layout_weight="3"
                        android:text="货号名称"
                        android:textColor="#fa0606"
                        android:id="@+id/prodName"

                        />
                    <TextView
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textSize="@dimen/prodname_size"
                        android:paddingRight="@dimen/padding_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1.0dip"
                        android:maxLines="2"
                        android:layout_weight="1.0"
                        android:text="套装样式"
                        android:textColor="#fa0606"
                        android:id="@+id/suiteGrpId"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_weight="1">
                    <TextView
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textSize="16sp"
                        android:paddingRight="6.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1.0dip"
                        android:maxLines="2"

                        android:text="数量："
                        android:textColor="#ff000000"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_reduce"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/text_angle_gray"
                            android:gravity="center"
                            android:text="一"
                            android:textColor="@color/grey_color1"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_num"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/text_angle"
                            android:gravity="center"

                            android:text="1"
                            android:textColor="@color/grey_color1"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_add"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/text_angle_right"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="@color/grey_color1"
                            android:textSize="16sp" />
                        <TextView
                            android:textSize="16.0sp"
                            android:paddingRight="1.0dip"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:gravity="right"
                            android:text="套"
                            android:textColor="#ff000000"
                            android:id="@+id/tv_uom"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
